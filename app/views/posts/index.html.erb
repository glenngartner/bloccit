<h1>All Posts</h1>
<div class = "container">
  <div class = "col-sm-4">
    <%= link_to "New Post", new_post_path(@post), class: 'btn btn-success' %>
  </div>
</div>

<% @posts.each do |post| %>
<div class = "media">
  <div class = "media-body">
    <h4 class = "media-heading">
      <%= link_to post.title, post %>
    </h4>
  </div>
</div>
<% end %>
