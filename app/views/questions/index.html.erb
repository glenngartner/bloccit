<h1>All Questions</h1>
<div class = "container">
  <div class = "col-sm-4">
    <%= link_to "New Question", new_question_path(@question), class: 'btn btn-success' %>
  </div>
</div>

<% @questions.each do |question| %>
<div class = "media">
  <div class = "media-body">
    <h4 class = "media-heading">
      <%= link_to question.title, question %>
    </h4>
  </div>
</div>
<% end %>
