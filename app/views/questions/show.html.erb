<h1><%= @question.title %></h1>

<div class = "row">
  <div class = "col-md-8">
    <p><%= @question.body %></p>
  </div>
  <div class = "col-md-8">
    <p><strong>Question Resolved:</strong> <%= @question.resolved.to_s %></p>
    <!-- <%= label_tag(:resolved, "Resolved") %> -->
    <!-- <%= check_box_tag(:resolved) %> -->
  </div>
  <div class = "col-md-4">
    <%= link_to "Back to All Questions", questions_path(@question), class: "btn btn-primary" %>
    <%= link_to "Edit", edit_question_path(@question), class: "btn btn-success" %>
    <!-- <%= link_to "Mark Resolved", @question, method: :update, class: "btn btn-secondary" %> -->
    <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this question?"} %>
  </div>
</div>
